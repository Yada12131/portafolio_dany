<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.getElementById('carousel');
    const projects = carousel?.children;
    
    if (!carousel || !projects) return;
    
    let currentIndex = 0;
    const totalProjects = projects.length;
    const projectsPerView = window.innerWidth >= 768 ? 2 : 1; // 2 en desktop, 1 en m√≥vil
    const maxIndex = Math.max(0, totalProjects - projectsPerView);
    
    function moveCarousel() {
      currentIndex = (currentIndex + projectsPerView) % (totalProjects);
      
      // Si llegamos al final, volvemos al inicio
      if (currentIndex >= maxIndex) {
        currentIndex = 0;
      }
      
      const translateX = -(currentIndex * (100 / projectsPerView));
      carousel.style.transform = `translateX(${translateX}%)`;
    }
    
    // Iniciar carrusel autom√°tico
    setInterval(moveCarousel, 4000);
    
    // Pausar en hover
    carousel.addEventListener('mouseenter', function() {
      carousel.style.animationPlayState = 'paused';
    });
    
    carousel.addEventListener('mouseleave', function() {
      carousel.style.animationPlayState = 'running';
    });
    
    // Responsive: ajustar en cambio de tama√±o de ventana
    window.addEventListener('resize', function() {
      currentIndex = 0;
      carousel.style.transform = 'translateX(0%)';
    });
  });
</script>
