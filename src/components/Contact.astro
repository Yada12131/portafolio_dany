<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form') as HTMLFormElement | null;
    const statusEl = document.getElementById('form-status') as HTMLElement | null;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;

    function setStatus(type, message) {
      if (!statusEl) return;
      statusEl.classList.remove('hidden');
      statusEl.classList.remove('text-green-700', 'text-red-700', 'bg-green-100', 'bg-red-100', 'border-green-300', 'border-red-300');
      if (type === 'success') {
        statusEl.classList.add('text-green-700', 'bg-green-100', 'border', 'border-green-300', 'p-3', 'rounded');
      } else {
        statusEl.classList.add('text-red-700', 'bg-red-100', 'border', 'border-red-300', 'p-3', 'rounded');
      }
      statusEl.textContent = message;
    }

    form?.addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = new FormData(form);
      const payload = {
        name: formData.get('name'),
        email: formData.get('email'),
        subject: formData.get('subject'),
        message: formData.get('message'),
      };

      try {
        submitBtn?.setAttribute('disabled', 'true');
        setStatus('info', 'Enviando mensaje...');

        const res = await fetch('/api/contact', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload),
        });

        // Intentar parsear JSON; si falla, leer como texto
        let data: any = null;
        try {
          data = await res.clone().json();
        } catch (_) {
          const txt = await res.text();
          console.error('Respuesta no-JSON:', txt);
          data = { ok: false, error: txt };
        }
        console.log('Respuesta API /api/contact:', data);
        if (!res.ok || !data.ok) {
          setStatus('error', data?.error || 'No se pudo enviar el mensaje');
          throw new Error(data?.error || 'No se pudo enviar el mensaje');
        }

        setStatus('success', '¬°Mensaje enviado! Te contactar√© pronto.');
        form.reset();
      } catch (err) {
        console.error(err);
        setStatus('error', 'Hubo un problema al enviar tu mensaje. Int√©ntalo nuevamente.');
      } finally {
        submitBtn?.removeAttribute('disabled');
      }
    });
  });
</script>
